$('#container').html('<%= j render("houses_browse", houses: @houses, markers: @markers) %>');


var markers = <%= raw @markers %>
var map_markers = []

initMap();
addMarkers(markers);

$(function(){
  $('#search_input').keyup(function(e){
    $('#search-form').submit();
  });
  $('#house-map-show').mouseenter(function(){
    $('body').addClass('noscroll');
  });
  $('#house-map-show').mouseleave(function(){
    $('body').removeClass('noscroll');
  });
})
